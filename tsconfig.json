{
  "compilerOptions": {
    "incremental": true,
    "sourceMap": true,
    "target": "ES5",
    "module": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["./dist"]
}
